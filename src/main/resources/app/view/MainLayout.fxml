<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="485.0" prefWidth="710.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.view.MainLayoutController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Navigation">
					<items>
					<MenuItem mnemonicParsing="false" onAction="#gotoHome" text="Home" />
                  <SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem mnemonicParsing="false" onAction="#closeApplication" text="Close" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Administration">
					<items>
                  <MenuItem mnemonicParsing="false" onAction="#gotoContactsView" text="View contacts" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
